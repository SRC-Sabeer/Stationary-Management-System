@model Stationary_Management_System.Models.RequestViewModel

<main>
    <div class="mb-4 pb-4"></div>
    <section class="shop-checkout container">
        <h2 class="page-title">Post Your Request</h2>

        <form id="addtocart-form" action="@Url.Action("Shop_Checkout", "Home")" method="post">


            <div class="checkout-form">
                <div class="billing-info__wrapper">
                    <h4>BILLING DETAILS</h4>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-floating my-3">
                                <input type="text" class="form-control" id="checkout_first_name" name="FirstName" placeholder="First Name">
                                <label for="checkout_first_name">First Name</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating my-3">
                                <input type="text" class="form-control" id="checkout_last_name" name="LastName" placeholder="Last Name">
                                <label for="checkout_last_name">Last Name</label>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-floating my-3">
                                <input type="email" class="form-control" id="checkout_company_name" name="Email" placeholder="Email">
                                <label for="checkout_company_name">Email</label>
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="form-floating my-3">
                                <input type="date" class="form-control" id="checkout_date" name="Date" placeholder="Date">
                                <label for="checkout_date">Date</label>
                            </div>
                        </div>


                        <div class="col-md-12">
                            <div class="form-floating my-3">
                                <input type="text" class="form-control" id="checkout_country" name="Country" placeholder="Country">
                                <label for="checkout_country">Country</label>
                            </div>
                        </div>


                        <input type="hidden" id="productId" name="ProductId" value="@ViewBag.ProductId">
                        <input type="hidden" id="quantity" name="Quantity" value="@ViewBag.Quantity">
                        <input type="hidden" id="total" name="Total" value="@ViewBag.Total">

                    </div>
                    <div class="col-md-12">
                        <div class="mt-3">
                            <textarea class="form-control form-control_gray" name="Note" placeholder="Order Notes (optional)" cols="30" rows="8"></textarea>
                        </div>
                    </div>
                </div>
                <div class="checkout__totals-wrapper">
                    <div class="sticky-content">
                        <div class="checkout__totals">
                            <h3>Your Order</h3>
                            <table class="checkout-cart-items">
                                <thead>
                                    <tr>
                                        <th>PRODUCT</th>
                                        <th>SUBTOTAL</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>@ViewBag.ProductName</td>
                                        <td>$@ViewBag.ProductPrice</td>
                                    </tr>

                                </tbody>
                            </table>
                            <table class="checkout-totals">
                                <tbody>
                                    <tr>
                                        <th>Quantity</th>
                                        <td id="quantityDisplay">@ViewBag.Quantity</td>
                                    </tr>

                                    <tr>
                                        <th>TOTAL</th>
                                        <td id="total">$@ViewBag.Total</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>

                        <button type="submit" class="btn btn-primary btn-checkout">PLACE REQUEST</button>
                    </div>
                </div>
            </div>
        </form>
    </section>
</main>

<div class="mb-5 pb-xl-5"></div>
